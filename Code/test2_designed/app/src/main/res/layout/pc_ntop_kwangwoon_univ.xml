<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <Button
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/seat1"
            android:background="@drawable/rounded"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="3dp" app:layout_constraintBaseline_toBaselineOf="@+id/seat2"
            app:layout_constraintEnd_toStartOf="@+id/seat2"/>
    <Button
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/seat2"
            android:background="@drawable/rounded"
            android:layout_marginTop="133dp"
            app:layout_constraintStart_toEndOf="@+id/seat1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="13dp"
    />
    <Button
            android:text="3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/seat3"
            android:background="@drawable/rounded"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="3dp" app:layout_constraintBaseline_toBaselineOf="@+id/seat4"
            app:layout_constraintEnd_toStartOf="@+id/seat4"/>
    <Button
            android:text="4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/seat4"
            android:background="@drawable/rounded"
            android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/seat2" app:layout_constraintStart_toEndOf="@+id/seat3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="13dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>