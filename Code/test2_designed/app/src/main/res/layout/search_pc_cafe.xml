<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="378dp"
            android:layout_height="186dp"
            android:background="@drawable/rounded"
            android:id="@+id/search_card"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="372dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="173dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="270dp"
                android:background="@drawable/rounded"
                android:layout_height="60dp" android:id="@+id/local_card"
                android:layout_marginTop="92dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">
            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="29dp" app:srcCompat="@drawable/ic_menu_search"
                    android:id="@+id/search_icon2" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/local" android:layout_marginEnd="8dp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/local"
                    android:hint="지점"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.771"
                    app:layout_constraintVertical_bias="0.533"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="270dp"
                android:background="@drawable/rounded"
                android:layout_height="60dp" android:id="@+id/pc_card" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="104dp">
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/pc_cafe"
                    android:hint="PC카페"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginTop="7dp" app:layout_constraintVertical_bias="0.125"/>
            <ImageView
                    android:layout_width="28dp"
                    android:layout_height="29dp" app:srcCompat="@drawable/ic_menu_search"
                    android:id="@+id/search_icon1" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pc_cafe" android:layout_marginEnd="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
                android:layout_width="33dp"
                android:layout_height="34dp" app:srcCompat="@drawable/ic_menu_fav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/list"
                app:layout_constraintHorizontal_bias="0.553" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="150dp" android:tint="@android:color/widget_edittext_dark"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pc_cafe_sel"
            android:hint="선택된 PC카페"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="381dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="331dp"/>
    <TextView
            android:text="즐겨찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/favorite" android:hint="즐겨찾기"
            android:layout_marginEnd="111dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="381dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="331dp"/>
    <Button
            android:text="찾기"
            android:background="@drawable/rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searching"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/search_card" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="104dp"/>
    <Button
            android:text="선택"
            android:layout_width="wrap_content"
            android:background="@drawable/rounded"
            android:layout_height="wrap_content"
            android:id="@+id/select"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/search_card" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>