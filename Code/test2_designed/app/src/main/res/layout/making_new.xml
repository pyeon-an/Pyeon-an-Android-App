<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="64dp"
            android:id="@+id/card1"
            android:background="@drawable/rounded"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/check_email"
            android:layout_marginEnd="8dp" android:layout_marginStart="4dp">

        <EditText
                android:layout_width="209dp"
                android:layout_height="44dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:hint="이메일 입력"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="112dp" android:layout_marginEnd="74dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_mail"
                android:id="@+id/email_ic"
                app:layout_constraintEnd_toStartOf="@+id/email" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="64dp" android:id="@+id/card2"
            android:background="@drawable/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/check_email"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/pc_card"
            android:layout_marginStart="8dp" android:layout_marginEnd="4dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwd"
                android:hint="비밀번호 입력"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="11dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="112dp" android:layout_marginEnd="70dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_key"
                android:id="@+id/key_ic"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="13dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="11dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="299dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="64dp" android:id="@+id/pc_card"
            android:background="@drawable/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/card2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/card4"
            android:layout_marginStart="8dp" android:layout_marginEnd="4dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pc_cafe"
                android:hint="비밀번호 확인"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="9dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="112dp" android:layout_marginEnd="70dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_key"
                android:id="@+id/search_icon1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="299dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="64dp" android:id="@+id/card4"
            android:background="@drawable/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/pc_card"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/card5"
            android:layout_marginStart="8dp" android:layout_marginEnd="4dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/age"
                android:hint="생년월일 입력"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="11dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="112dp" android:layout_marginEnd="70dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_date"
                android:id="@+id/cal_ic"
                android:layout_marginEnd="299dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="11dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="13dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="64dp" android:id="@+id/card5"
            android:background="@drawable/rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/card4"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/card6"
            android:layout_marginStart="8dp" android:layout_marginEnd="4dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nickname"
                android:hint="nickname"
                android:layout_marginEnd="68dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="114dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="11dp"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_person"
                android:id="@+id/per_ic"
                android:layout_marginEnd="299dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="64dp" android:id="@+id/card6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded" app:layout_constraintTop_toBottomOf="@+id/card5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/join"
            android:layout_marginStart="8dp" android:layout_marginEnd="4dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phone"
                android:hint="핸드폰번호 입력"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="114dp" android:layout_marginEnd="68dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="11dp"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_phone"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="17dp" android:layout_marginEnd="298dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="가입완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/join"
            android:background="@drawable/rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="중복 확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_email"
            android:background="@drawable/rounded"
            app:layout_constraintTop_toBottomOf="@+id/card1"
            app:layout_constraintBottom_toTopOf="@+id/card2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>